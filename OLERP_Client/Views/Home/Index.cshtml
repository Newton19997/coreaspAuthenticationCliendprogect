@model UserLogin
@{
    ViewData["Title"] = "Home Page";

}
<div style="padding-top:50px;"></div>
<div style="padding:50px;">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div>
                @using (Html.BeginForm("procLogins", "Home", FormMethod.Post, new { role = "form" }))
            {
                <div>
                    @Html.AntiForgeryToken()
                    <div>
                        <label>Username</label>
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control textbox" })
                    </div>
                    <div style="padding-top:20px;"></div>
                    <div>
                        <label>Password</label>
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control textbox" })
                    </div>
                </div>
                <div style="padding-left:35%;width:40%;">
                    <div style="padding-top:20px;">
                        <input class="btn btn-primary btn-lg rph-login-button" type="submit" value="Login"/>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>



